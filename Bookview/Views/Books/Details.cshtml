@model Bookview.Models.Book

@{
    ViewData["Title"] = "Szczegóły książki";
}

<h1>Szczegóły książki</h1>

<div class="row">
    <div class="col-md-4">
        <!-- Wyświetlanie okładki -->
        <div class="text-center">
            @if (!string.IsNullOrEmpty(Model.CoverImage))
            {
                <img src="@Url.Content("~/graphic/" + Model.CoverImage)" alt="Okładka książki" class="img-thumbnail" width="250">
            }
            else
            {
                <img src="@Url.Content("~/graphic/default.jpg")" alt="Brak okładki" class="img-thumbnail" width="250">
            }
        </div>
    </div>

    <div class="col-md-8">
        <h4>@Model.Title</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Author)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Category)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.BookId" class="btn btn-warning">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>
